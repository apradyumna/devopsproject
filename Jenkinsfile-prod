// Jenkinsfile-test
pipeline {
    agent {
        label 'prod' // Distinct agent for development builds
    }
    stages {
        stage('Build') {
            steps {
                echo 'building the docker image...'
                sh 'sudo docker build . -t devopsproject1'
            }
        }
        stage('Test') {
            steps {
                echo 'running a container from image and test internally...'
                sh './test-container-prod.sh'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying containerized application on prod...'
                sh './deploy-container-prod.sh'
            }
        }
    }
}
