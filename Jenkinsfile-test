// Jenkinsfile-test
pipeline {
    agent {
        label 'test' // Distinct agent for development builds
    }
    stages {
        stage('Install Dependencies and Run Script') {
            steps {
                // Ensure the package list is up-to-date
                sh 'sudo apt-get update'
                
                // Install curl
                sh 'sudo apt-get install -y curl'
                
                echo 'curl installed...'
            }
        }
        stage('Build') {
            steps {
                echo 'building the docker image...'
                sh 'sudo docker build . -t devopsproject1'
            }
        }
        stage('Test') {
            steps {
                echo 'running a container from image and test internally...'
                sh './test-container-dev.sh'
            }
        }
    }
}
